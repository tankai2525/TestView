        android:textSize="20sp" />

    <Button
        android:id="@+id/btn3_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="mytextview2"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
